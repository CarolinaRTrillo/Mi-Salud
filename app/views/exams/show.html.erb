<div class="no-wrap">
  <div class="contenedor-exam">
    <h1 style="position: relative;">Examen</h1>
  </div>
  <div class="contenedor vh-100">
    <div class="card-exam" style="border: groove;">
      <div class="card-details-exam" style="width: 28rem; margin-right:2rem;">
        <ul class="list-group list-group-flush-exam">
          <li class="list-group-item"><strong style="font-size: 1.5rem">Fecha</strong></li>
          <%= @exam.date %>
          <li class="list-group-item"><strong style="font-size: 1.5rem">Nombre estudio</strong></li>
          <%= @exam.name %>
          <li class="list-group-item"><strong style="font-size: 1.5rem">Lugar Estudio</strong></li>
          <%= @exam.place %>
          <%= link_to "Volver", exams_path(@exams), class: "btn btn-secondary" %>
        </ul>
      </div>
      <div class="img-exam" style="border-radius: 1rem;">
      <%= image_tag @exam.photo, id:"my-image", style:"height: 31rem;position:relative;left: -1rem;top: 0rem;width: 26rem;"%>
      </div>
    </div>
  </div>
</div>
