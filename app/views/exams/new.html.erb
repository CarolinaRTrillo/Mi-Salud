<div class="exam-new-wraper">
  <div class="card-exam-principal-new">
    <div class=" card-secundaria-exam-new">
      <div data-aos="flip-left">
        <div class="card-exam-new" style="width: 50rem">
        <div class="mb-5">
          <h1 style="font-size: 2rem;font-family: montserrat;padding-top: 1.5rem;;font-weight: 500;">Examenes</h1>
          <h4 style="margin-top: 0%;font-family: montserrat;font-weight: 200;font-size: 1.2rem;">Agreg√° un examen a tu historial.</h4>
          <div class="linea-exam"></div>
        </div>
        <div>
          <%= simple_form_for @exam do |f| %>

              <%= f.input :date, label: "Fecha"%>
              <%= f.input :name,label: "Nombre" %>
              <%= f.input :place, label: "Lugar" %>
              <%= f.input :photo, label: "Foto", as: :file %>
