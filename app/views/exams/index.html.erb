<div class="exams-wraper">
  <div class="card-exams-principal ">
    <div class=" card-secundaria-exams">
      <h1 class="titulo-1">Buenos dias, <%= current_user.name %> :</h1>
        <h4 style="display: flex;justify-content: center;font-family: 'Montserrat';font-weight: 300;margin-bottom: -1rem">Estos son tus examenes</h4>
        <div style="display: flex;height: 11rem;padding-left: 15rem;">
          <div class="secondary-barra" style="margin-top: 3rem;margin-bottom: 3rem;background-color#: f9f8f8;align-items: center;background: #f9f8f8;border-radius: 60px;justify-content: center;display: flex;    width: 43rem;">
            <div style="margin-right: 2rem;">
              <h4 style="font-size: inherit;color: #6d6e6f;">Examenes totales : <%= @exams.count %></h4>
            </div>
            <div style="margin-right: 2rem;">
              <h4 style="font-size: inherit;color: #6d6e6f;">Porcentaje Salud : 50%</h4>
            </div>
            <div style="margin-right: 2rem;">
              <h4 style="font-size: inherit;color: #6d6e6f;"> <%= link_to "Agregar Examen", new_exam_path, style: "font-size: inherit;color: #6d6e6f;" %> </h4>
            </div>
          </div>
        </div>
        <div class="general-card-exams">
          <div class="card-exams overflow-auto" stytle="max-height: 29rem;box-shadow: 0px 25px 20px -20px rgba(0, 0, 0, 0.45), -25px 0 20px -20px rgba(0, 0, 0, 0.45);">
            <div class="avatar1" style="display: grid;grid-template-columns: 1fr 2fr 1fr;border-bottom: inset;height: 7rem;">
              <%= image_tag "healthy-habits", class:"avatar-1", style:"border-radius:50%;height: 5rem;margin-left: 1rem;margin-top: 1rem;"%>
                  <h4 class="card-text-exams-1"> Tus examenes</h4>
                  <%= link_to "+", new_exam_path, style: "text-align: center;margin-top: 1.3rem;font-size: 3rem;" %>
            </div>
                <table class="table" style="font-size: 0.8rem;">
          <thead>
            <tr>
              <th scope="col">FECHA</th>
              <th scope="col">NOMBRE</th>
              <th scope="col">LUGAR</th>
              <th scope="col">ACCIONES</th>
            </tr>
          </thead>
          <tbody class="table-group-divider" style="font-family: 'Montserrat';">
            <% @exams.each do |exam|  %>
            <tr>
              <th scope="row" style="position: relative; text-align: left;"><%= exam.date%></th>
              <th scope="row" style="position: relative; text-align: left;"><%= exam.name%></th>
              <th scope="row" style="position: relative; text-align: left;"><%= exam.place%></th>


              <td><%= link_to exam_path(exam), data: {turbo_method: :delete, turbo_confirm: "Estas seguro que deseas eliminar el examen?"} do %>
              <i class="fa-solid fa-trash" style="color: #f05168"></i>
              <% end %>

              | <%= link_to edit_exam_path(exam) do %>
              <i class="fa-solid fa-pencil" style="color: #ffcc07"></i>
              <% end %>

              | <%= link_to exam_path(exam)do %>
              <i class="fa-solid fa-eye"></i>
              <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
          </div>
            <div class="card-exams" style="box-shadow: 0px 25px 20px -20px rgba(0, 0, 0, 0.45), 25px 0 20px -20px rgba(0, 0, 0, 0.45);">
              <div class="avatar1" style="display: grid;grid-template-columns: 0fr 1fr;border-bottom: inset;height: 7rem;">
                <%= image_tag "grafico-torta2", class:"avatar-1", style:"border-radius:50%;height: 5rem;margin-left: 1rem;margin-top: 1rem;"%>
                    <h4 class="card-text-exams-1" style="margin-left: 1.7rem"> Ultimos examenes</h4>
              </div>

                <div class="minicards-principal-exams"  >
                    <% @exams.first(4).each do |exam| %>
                      <%= link_to exam_path(exam) do  %>
                        <div class="col">
                              <div class="card-exams-index"  >
                                <div class="avatar-exams-2" >
                                  <%= image_tag "icono-recipes", class:"avatar-1", style:"border-radius:50%;height: 3rem;margin-left: 1rem;margin-top: 1rem;"%>
                                  <h3 class="card-text-exams-4"> <%= exam.date %> </h3>
                                  <p class="card-text-exams-5"> <%= exam.name %> </p>
                                </div>
                              </div>
                        </div>
                      <% end %>
                     <%end %>
                </div>
            </div>
        </div>

      </div>
  </div>
</div>
