<script>
 AOS.init();
</script>
<div class="no-wrap">
  <div class="contenedor-medical mt-5 vh-auto" id="home2">
    <div class="row justify-content-around mt-5">
      <div class="col-6" data-aos="zoom-in-right" ata-aos-offset="500" data-aos-easing="ease-in-sine">
       <div class="card card-medical">
         <div class="card-header-home2">
           <h2 class="mt-3" id="h2-home2">Últimos examenes</h2>
         </div>
         <div class="">
           <table class="table-medical">
             <thead>
               <tr>
                 <th scope="col">Fecha</th>
                 <th scope="col">Examen</th>
                 <th scope="col">Lugar</th>
               </tr>
             </thead>
             <tbody>
               <% @exams.each do |exam| %>
                <tr>
                  <th scope="row row-medical"><%= exam.date%></th>
                  <th scope="row row-medical"><%= exam.name%></th>
                  <th scope="row row-medical"><%= exam.place%></th>
                </tr>
               <% end %>
             </tbody>
             </table>
         </div>
         <h4 id="h4-home2"><%= link_to "Ver todos", exams_path%></h4>
       </div>
      </div>


      <div class="col-6" data-aos="zoom-in-left" ata-aos-offset="500" data-aos-easing="ease-in-sine">
       <div class="card card-medical">
         <div class="card-header-home2">
           <h2 class="mt-3" id="h2-home2">Últimas prescripciones</h2>
         </div>
         <div>
           <table class="table-medical">
             <thead>
               <tr>
                 <th scope="col">Fecha</th>
                 <th scope="col">Doctor</th>
               </tr>
             </thead>
             <tbody>
               <% @recipes.each do |recipe|  %>
                 <tr>
                   <th scope="row row-medical"><%= recipe.date%></th>
                   <th scope="row row-medical"><%= recipe.doctor_name%></th>
                 </tr>
               <% end %>
             </tbody>
           </table>
           <h4 id="h4-home2"><%= link_to "Ver todos", recipes_path%> </h4>
         </div>
       </div>
      </div>
    </div>


    <div class="row justify-content-around my-5">
      <div class="col-6" data-aos="zoom-in-right" ata-aos-offset="500" data-aos-easing="ease-in-sine">
       <div class="card card-medical">
         <div class="card-header-home2">
           <h2 class="mt-3" id="h2-home2">Estado de tus hábitos</h2>
         </div>
         <div>
           <table class="table-medical">
             <thead>
               <tr>
                 <th scope="col">Hábito</th>
                 <th scope="col">Actualizado</th>
               </tr>
             </thead>
             <tbody>
               <% @habits.each do |habit|  %>
                 <tr>
                   <th scope="row row-medical"><%= habit.habit_type%></th>
                   <th scope="row row-medical"><i class="bi bi-check2-square"></i></th>
                 </tr>
               <% end %>
             </tbody>
           </table>
         </div>
         <h4 id="h4-home2"><%= link_to "Ver todos", habits_path%> </h4>
       </div>
      </div>
      <div class="col-6" data-aos="zoom-in-left" ata-aos-offset="500" data-aos-easing="ease-in-sine">
       <div class="card card-medical">
         <div class="card-header-home2">
           <h2 class="mt-3" id="h2-home2">Próximos turnos</h2>
         </div>
         <div>
           <table class="table-medical">
             <thead>
               <tr>
                 <th scope="col">Fecha</th>
                 <th scope="col">Turno</th>
               </tr>
             </thead>
             <tbody>
               <% @bookings.each do |booking|  %>
                 <tr>
                   <th scope="row row-medical"><%= booking.start_time%></th>
                   <th scope="row row-medical"><%= booking.name%></th>
                 </tr>
               <% end %>
             </tbody>
           </table>
         </div>
         <h4 id="h4-home2"><%= link_to "Ver todos", bookings_path%> </h4>
       </div>
      </div>
    </div>
  </div>
