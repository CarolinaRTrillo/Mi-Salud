<%= javascript_include_tag "image_zoom.js" %>
<div class="no-wrap" style="display: flex;flex-direction: column; margin-bottom: 8rem;">
    <div>
      <h1 class="titulo-show-booking d-flex justify-content-center mt-5">Detalles de tu cita</h1>
    </div>
    <div class="d-flex justify-content-center">
      <div class="card-details-booking" style="width: 90%;border: groove;box-shadow: 0px 25px 20px -20px rgb(0 0 0 / 45%), 25px 0 20px -20px rgb(0 0 0 / 45%);border-radius: 1rem;border-style: ridge;padding: 1rem;">
        <ul class="list-group list-group-flush">
          <li class="list-group-item d-flex justify-content-center"><strong style="font-size: 1.7rem"><%= @booking.name %></strong></li>
          <div><br><strong style="font-size: 1.2rem;margin-right: 0.4rem;">Fecha:   </strong><%= I18n.l(Date.today, format: '%A, %d de %B de %Y') %><br><br></div>
          <div><strong style="font-size: 1.2rem;margin-right: 0.4rem;">Hora: </strong><%= @booking.start_time.strftime("%H:%M") %><br><br></div>
          <div><strong style="font-size: 1.2rem;margin-right: 0.4rem;">Detalles: </strong><%= @booking.details %><br><br></div>
          <div><strong style="font-size: 1.2rem;margin-right: 0.4rem;">Direcci√≥n: </strong><%= @booking.address %></div>
          <div class="botones-show-booking">
            <%= link_to "Volver", bookings_path(@booking), class: "btn boton-1 btn btn-primary" %>
            <%= link_to "Editar", edit_booking_path(@booking), class: "btn boton-1 btn btn-primary" %>
            <%= link_to "Eliminar", bookings_path(@booking), data: {turbo_method: :delete, turbo_confirm: "Estas seguro que deseas eliminar el examen?"}, class: "btn boton-1 btn btn-primary" %>
          </div>
        </ul>
        <div style="width: 100%; height: 600px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="pk.eyJ1IjoiY21hbnVmZXJyZXIiLCJhIjoiY2t6Zmt3N21yMDE5cjJ1bWhlOWduc3FwaiJ9.WU__lgOCKvNH2iU2oY67VQ">
        </div>
      </div>
    </div>
</div>
