<div class="habits-wraper">
  <div class="card-habits-principal ">
    <div class="card-secundaria-habits">
        <h1 class="titulo-1"><%= current_user.name %>, estos son tus hábitos:</h1>
        <div style="display: flex;height: 11rem;justify-content: center;">
          <div class="secondary-barra d-flex justify-content-around" style="margin-top: 2rem;margin-bottom: 3rem;background-color: #0fa89f;align-items: center;border-radius: 60px;justify-content: center;display: flex;    width: 43rem;">
            <div>
              <h4 style="font-size: inherit;color: white;">Hábitos totales: <%= @habits.count %></h4>
            </div>
            <div>
              <h4 style="font-size: inherit;color: white;">Porcentaje salud: 50%</h4>
            </div>
            <div>
              <h4 style="font-size: inherit;color: white;"> <%= link_to "Agregar hábito", new_habit_path, style: "font-size: inherit;color: white;" %> </h4>
            </div>
          </div>
        </div>
        <div class="general-card" style="width: 68rem;">
          <div class="card-habits" style="box-shadow: 0px 25px 20px -20px rgba(0, 0, 0, 0.45), -25px 0 20px -20px rgba(0, 0, 0, 0.45);">
            <div class="avatar1" style="display: grid;grid-template-columns: 1fr 2fr 1fr;border-bottom: inset;height: 7rem;">
              <%= image_tag "https://res.cloudinary.com/drd7kavdp/image/upload/v1674605688/healthy-habits_ffx7kd.png", class:"avatar-1", style:"border-radius:50%;height: 5rem;margin-left: 1rem;margin-top: 1rem;"%>
                  <h4 class="card-text-habitos-1"> Tus hábitos</h4>
                  <%= link_to "+", edit_habit_path(@habits), style: "text-align: center;margin-top: 1.3rem;font-size: 3rem;" %>
            </div>
            <div class="habits-frecuency">
            <span class="color-cards6"></span>
              <%= link_to "Tabaco", habits_tabaco_path(habit: "Tabaco"), style:" margin-left: -20.8rem;"%>

              <% if @tabaco %>
                <%= @tabaco.frequency %>
              <% else %>
                <p>vacio</p>
              <%end  %>
            </div>
            <div class="habits-frecuency">
            <span class="color-cards1"></span>
              <%= link_to "Alcohol", habits_alcohol_path(habit: "Alcohol"),style:"margin-left: -19.8rem;"%>

               <% if @alcohol %>
                <%= @alcohol.frequency %>
               <% else %>
                <p>vacio</p>
               <%end  %>
            </div>
            <div class="habits-frecuency">
            <span class="color-cards2"></span>
              <%= link_to "Café", habits_cafe_path(habit: "Café"), style:"margin-left: -23.8rem;"%>
               <% if @cafe %>
                <%= @cafe.frequency %>
               <% else %>
                <p>vacio</p>
               <%end  %>

            </div>
            <div class="habits-frecuency">
              <span class="color-cards3"></span>
              <%= link_to "Alimentación", habits_alimentacion_path(habit: "Alimentación"), style:"margin-left: -17.8rem;" %>
                <% if @alimentacion %>
                  <%= @alimentacion.frequency%>
                <% else %>
                  <p>vacio</p>
               <% end  %>
            </div>
            <div class="habits-frecuency">
              <span class="color-cards4"></span>
                <%= link_to "Ejercicio", habits_ejercicio_path(habit: "Ejercicio"), style:"margin-left: -16.8rem;" %>
              <div>
                <% if @ejercicio %>
                  <%= @ejercicio.frequency %>
                  <% else %>
                  <p>vacio</p>
                <% end  %>
              </div>
            </div>

            <div class="habits-frecuency">
            <span class="color-cards5"></span>
              <%= link_to "Sueño", habits_sueno_path(habit: "Sueño"), style:"margin-left: -22.8rem;"%>
                 <% if @sueno %>
                  <%= @sueno.frequency %>
                 <% else %>
                  <p>vacio</p>
                 <% end  %>
            </div>
          </div>
          <div class="card-habits" style="box-shadow: 0px 25px 20px -20px rgba(0, 0, 0, 0.45), 25px 0 20px -20px rgba(0, 0, 0, 0.45);">
            <div class="avatar1" style="display: grid;grid-template-columns: 0fr 1fr;border-bottom: inset;height: 7rem;">
              <%= image_tag "https://res.cloudinary.com/drd7kavdp/image/upload/v1674610050/grafico-torta2_jvugzk.png", class:"avatar-1", style:"border-radius:50%;height: 5rem;margin-left: 1rem;margin-top: 1rem;"%>
                  <h4 class="card-text-habitos-1" style="margin-left: 1.7rem"> Tus resultados</h4>
            </div>
            <div class="grafico-dona-habitos">
              <table class="table-medical-habito-2">
                  <tbody>
                    <% @habits.each do |habit|  %>
                      <tr>
                        <th scope="row row-medical" style="font-weight: 200"><%= habit.habit_type %></th>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
              <div style="margin-top: -2rem; margin-left: 3rem; width: 220px;">
                <% @habits.last(1).each do |habit|  %>
                  <%= pie_chart Habit.group(:habit_type).limit(6).sum(:user_id), legend: false, colors: ["#FF5757", "#03989E", "#545454", "#00C2CB"], donut: true %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
